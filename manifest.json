{
  "manifest_version": 3,
  "name": "Notion Red Sheet",
  "version": "1.5",
  "description": "Notionサイトで特定の要素の色を透明にするChrome拡張",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background":{
    "service_worker": "background.js",    
    "type": "module"
  },
  "icons": {
    "128": "icon128_normal.png"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "https://*.notion.site/*"
      ],
      "css": ["./content.css"]
    }
  ]
}
